{
    "manifest_version": 2,
    "name": "Popify",
    "version": "1.0.1",
    "icons": {
        "48": "icons/popify48.png"
    },
    "description": "Pops the current page out into a minimal popup page.",
    "browser_action": {
        "default_title": "Popify",
        "default_popup": "popup/popup.html",
	"default_icon":{
		"19":"icons/popify19.png",
		"38":"icons/popify38.png"
	}
    },
    "permissions": [
        "tabs",
        "webRequest"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "popify@addon.org",
            "strict_min_version": "44.0"
        }
    }
}
